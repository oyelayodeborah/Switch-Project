    </div>
    <div class="form-group ">
        @Html.LabelFor(m => m.FlatAmount)
        @Html.TextBoxFor(m => m.FlatAmount, new { @class = "form-control", maxlength = 7, pattern = "\\d+$", required = "required" })
        @Html.ValidationMessageFor(model => model.FlatAmount, "", new { @class = "text-danger" })
    </div>
    <div class="form-group ">
        @Html.LabelFor(m => m.PercentOfTransaction)
