@model IEnumerable<MySwitch.Core.Models.Fee>

@{
    ViewBag.Title = "View All Fees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null)
{
    if (TempData["Message"].ToString() == "Success")
    {
        <div class="alert alert-success">
            <p>@TempData["Message"] <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> </p>

        </div>

    }
}
<p>
    @Html.ActionLink("Add new Fee", "Add")
</p>
<table class="table table-hover table-responsive table-condensed" id="customers">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlatAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PercentOfTransaction)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Minimum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maximum)
            </th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlatAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PercentOfTransaction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Minimum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maximum)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

            </td>
        </tr>
        }
    </tbody>

</table>
@section ViewSpecificJavascript
    {
    <script>
            $(document).ready(function () {
                setTimeout(function () {
                    $(".alert").fadeOut(100, null);
                },
                    3000);
            });
            $("#customers").dataTable();

    </script>

}