</p>
<table class="table table-hover table-responsive table-condensed" id="customers">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChannelId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateModified)
            </th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            var trans = new MySwitch.Data.Repositories.TransactionTypeRepository();
            var TransactionType = trans.Get(item.TransactionTypeId);
            var chan = new MySwitch.Data.Repositories.ChannelRepository();
            var Channel = chan.Get(item.ChannelId);
            var fee = new MySwitch.Data.Repositories.FeeRepository();
            var Fee = fee.Get(item.FeeId);
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @TransactionType.Name
            </td>
            <td>
                @Channel.Name
            </td>
            <td>
                @Fee.Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModified)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

            </td>
        </tr>
    }
    </tbody>

</table>
@section ViewSpecificJavascript
